# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java source files
[*.java]
indent_style = space
indent_size = 4

# Kotlin (if present)
[*.kt]
indent_style = space
indent_size = 4

# Gradle files
[*.gradle]
indent_style = space
indent_size = 2

# YAML (Spring configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML (Spring, Maven, IntelliJ configs)
[*.xml]
indent_style = space
indent_size = 2

# Properties files
[*.properties]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Markdown / Docs
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Git attributes and ignore files
[{.gitattributes,.gitignore}]
end_of_line = lf
insert_final_newline = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# JSON
[*.json]
indent_style = space
indent_size = 2

# Editor & IDE configurations
[*.{iml,ipr,iws}]
indent_style = space
indent_size = 2
